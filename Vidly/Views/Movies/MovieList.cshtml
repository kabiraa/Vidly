@model Vidly.ViewModel.ListMoviesViewModel
@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th><h1>Movies</h1></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    @movie.Name
                </td>
            </tr>
        }
    </tbody>
</table>

