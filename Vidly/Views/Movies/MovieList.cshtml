@model Vidly.ViewModel.ListMoviesViewModel
@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th><h1>Movies</h1></th>
            <th><h1>Genre</h1></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Add Movie", "MoviesForm", "Movies")

