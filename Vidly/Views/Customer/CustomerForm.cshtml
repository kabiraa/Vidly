@model Vidly.ViewModel.CustomerFormViewModel
@{
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Form</h2>

@using (@Html.BeginForm("Save", "Customer"))
{
    <div class=“form-­group”>
        @Html.LabelFor(m=> m.Customer.Name)
        @Html.TextBoxFor(m=>m.Customer.Name, new { @class = "form-control"})
     </div>

    <div class=“form-­group”>
        @Html.LabelFor(m => m.Customer.Birthdate)
        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0: d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class=“form-­group”>
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MembershipName"), "Select Membership Type", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter) Subscribed To News Letter?
        </label>
    </div>
    <button type="submit" class="btn btn-primary"> Save</button>
}

